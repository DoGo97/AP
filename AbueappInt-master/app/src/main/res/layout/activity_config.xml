<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F52BA"
    tools:context=".config">

    <Button
        android:id="@+id/apoyo"
        android:layout_width="173dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:background="#89CFF0"
        android:text="Apoyos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/localiz" />

    <ImageView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="80dp"
        android:onClick="contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[12]" />

    <Button
        android:id="@+id/contac"
        android:layout_width="173dp"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:background="#89CFF0"
        android:onClick="contact"
        android:text="Añadir contacto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gps"
        android:layout_width="131dp"
        android:layout_height="122dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:background="#00BCD4"
        android:onClick="localiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <Button
        android:id="@+id/localiz"
        android:layout_width="173dp"
        android:layout_height="90dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="32dp"
        android:background="#89CFF0"
        android:onClick="localiz"
        android:text="Localización"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contac" />

    <ImageView
        android:id="@+id/apoyos"
        android:layout_width="131dp"
        android:layout_height="122dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:background="#9C27B0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gps"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <Button
        android:id="@+id/text"
        android:layout_width="173dp"
        android:layout_height="90dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="90dp"
        android:background="#89CFF0"
        android:onClick="letra"
        android:text="Texto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apoyo"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/texto"
        android:layout_width="131dp"
        android:layout_height="122dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="81dp"
        android:background="#E91E63"
        android:onClick="letra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apoyos"
        app:layout_constraintVertical_bias="0.015"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <ImageButton
        android:id="@+id/conf"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:onClick="regr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>